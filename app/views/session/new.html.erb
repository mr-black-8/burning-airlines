<h2>Login</h2>

<% if @current_user %>
  <p>You are already logged in...</p>
<% else %>
  <%= form_tag login_path do %>
    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag "Login" %>

  <% end %>
<% end %>
